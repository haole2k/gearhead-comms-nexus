generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Member {
  id        String     @id @default(uuid())
  name      String
  role      TeamRole   @default(MECHANIC)
  isTeamLead Boolean   @default(false)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

enum Role {
  ADMIN
  USER
}

enum TeamRole {
  MECHANIC
  ENGINEER
  STRATEGIST
  DRIVER
  TEAM_PRINCIPAL
  PIT_CREW
  AERODYNAMICIST
  DATA_ANALYST
  RACE_ENGINEER
  TEST_DRIVER
}